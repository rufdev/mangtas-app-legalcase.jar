<schema adapter="housing">

	<element tablename="housing_ledger_payment_item">
		<field name="objid" primary="true" prefix="HLPI" />
		<field name="parentid" required="true" />

		<complex name="parent" ref="housing_ledger_payment" jointype="many-to-one" includefields="receiptno,receiptdate,ledgerid" 
			required="false">
			<key field="parentid" target="objid" />
		</complex>		

		<field name="month" required="true" />
		<field name="year" required="true" />
		<field name="amount" required="true" type="decimal" />
	</element>

</schema>